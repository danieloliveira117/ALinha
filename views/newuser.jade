extends layout

block content
	script(type='text/javascript').
		pagativa = "registar"
		
	script(src="/javascripts/pag.js")
	h1= title
	div(style="max-width:800px; margin: 0 auto;")
		form#formAddUser(class="form-horizontal" role="form" name="adduser",method="post",action="/adduser")
			div(class="form-group")
				label(class="col-sm-4 control-label" for="inputUserName") Username:
				div(class="col-sm-8" style="max-width:400px; margin: 0 auto;")
					input#inputUserName(type="text" name="username" class="form-control")
			div(class="form-group")
				label(class="col-sm-4 control-label" for="inputUserPassword") Password:
				div(class="col-sm-8" style="max-width:400px; margin: 0 auto;")
					input#inputUserPassword(type="password" name="userpassword" class="form-control")
			div(class="form-group")
				div(class="col-sm-offset-1 col-sm-11 text-center")
					button#btnSubmit(type="submit" class="btn btn-primary") Registar
					|&nbsp;
					a(class="btn btn-default" href="/") Cancelar